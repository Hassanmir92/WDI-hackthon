    <div id="error_explanation">
      <h2><%= pluralize(@flavour.errors.count, "error") %> prohibited this flavour from being saved:</h2>

      <ul>
      <% @flavour.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
