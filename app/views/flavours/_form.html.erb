    <%= f.label :personality, "Which picture best describes what you were doing last night?" %><br>
    <%= radio_button("flavour", "personality", "Party") %> Party
    <%= radio_button("flavour", "personality", "Lucky") %> Lucky
    <%= radio_button("flavour", "personality", "Unlucky") %> Unlucky
    <%= radio_button("flavour", "personality", "TV") %> TV
  </div>

  <div class="field">
    <%= f.label :cheekyness, "How Cheeky you feeling today?" %><br>
    <%= radio_button("flavour", "personality", "1") %> 
    <%= radio_button("flavour", "personality", "2") %> 
    <%= radio_button("flavour", "personality", "3") %> 
    <%= radio_button("flavour", "personality", "4") %> 
  </div>

  <div class="field">
    <%= f.label :transport, "What is the best representation of your car?" %><br>
    <%= radio_button("flavour", "transport", "Lambo") %> Party
    <%= radio_button("flavour", "transport", "BMW") %> Lucky
    <%= radio_button("flavour", "transport", "Citroen") %> Unlucky
